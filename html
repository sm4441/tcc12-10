    <script>
        document.addEventListener("DOMContentLoaded", () => {
          const botaoCadastrar = document.querySelector("button[style*='rgb(255, 44, 44)']");
        
          botaoCadastrar.addEventListener("click", async () => {
            // Coleta dos campos
            const email = document.querySelector("input[placeholder='Email']").value;
            const senha = document.querySelector("input[placeholder='Senha']").value;
            const nome_completo = document.querySelector("input[placeholder='Nome Completo']").value;
            const cpf = document.getElementById("cpf").value;
            const cnpj = document.getElementById("cnpj").value;
            const telefone = "11999999999"; // depois você pode criar um campo pra isso
            const limite = 1000; // exemplo de valor fixo
            const id_endereco = 1;
            const id_status = 1;
            const is_pcd = false;
        
            // Decide qual documento enviar
            const documento = cpf || cnpj;
        
            // Monta o corpo da requisição
            const dados = {
              cpf: documento,
              telefone,
              nome_completo,
              email,
              id_endereco,
              id_status,
              senha,
              limite,
              is_pcd
            };
        
            try {
              const resposta = await fetch("http://localhost:3000/tcc/add_usuario", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(dados)
              });
        
              const resultado = await resposta.json();
              console.log("Resultado:", resultado);
        
              if (resposta.ok) {
                alert("Usuário cadastrado com sucesso!");
              } else {
                alert("Erro: " + (resultado.mensagem || "Falha no cadastro"));
              }
        
            } catch (erro) {
              console.error("Erro na requisição:", erro);
              alert("Erro ao conectar com o servidor!");
            }
          });
        });
        </script>
        
